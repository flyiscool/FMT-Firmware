import os
from building import *
Import('RTT_ROOT')

cwd = GetCurrentDir()

src = Glob('*.c')
src += Glob('ntc/*.c')
src += Glob('buzzer/*.c')
src += Glob('pmu/*.c')


inc = [cwd]
inc += [cwd + '/ntc']
inc += [cwd + '/buzzer']
inc += [cwd + '/pmu']

group = DefineGroup('PeripheralDriver', src, depend = [''], CPPPATH = inc)

Return('group')